<Window x:Class="VirtualMemorySimulation.UI.ChartsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualMemorySimulation.UI"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        
        Title="Algorithm Performance Comparison Charts" Height="650" Width="900" WindowStartupLocation="CenterScreen" Background="#FFF8F2F4">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Simulation Performance"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#FFA40E50"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <TabControl Grid.Row="1">
            <TabItem Header="Fault Rate">
                <oxy:PlotView  x:Name="FaultRatePlot"/>
            </TabItem>
            <TabItem Header="Total Page Faults">
                <oxy:PlotView x:Name="PageFaultsPlot"/>
            </TabItem>
            <TabItem Header="AMAT">
                <oxy:PlotView  x:Name="AmatPlot"/>
            </TabItem>
            <TabItem Header="Memory Usage">
                <oxy:PlotView  x:Name="MemoryUsagePlot"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
