<Window x:Class="VirtualMemorySimulation.UI.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualMemorySimulation.UI"
        mc:Ignorable="d"
        Title="Simulation Results" 
        WindowStartupLocation="CenterScreen"
        Height="700" Width="1100"
        Background="#FFF8F2F4">
    
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Simulation Results"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="#FFAD1457"/>

        <Border Grid.Row="1"
                CornerRadius="12"
                Background="#FFFFF4F4"
                Padding="12"
                Margin="0,0,0,16">

            <StackPanel>

                <TextBlock x:Name="RefStringLabel"
                       Text=""
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#FFBE0966"
                       TextAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="14, 0">
                        <TextBlock Text="Algorithm:" FontWeight="Bold" Foreground="#FFBE0966" />
                        <TextBlock x:Name="AlgorithmLabel"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="14, 0">
                        <TextBlock Text="Frames:" FontWeight="Bold" Foreground="#FFBE0966" />
                        <TextBlock x:Name="FramesLabel"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="14, 0">
                        <TextBlock Text="Step:" FontWeight="Bold" Foreground="#FFBE0966" />
                        <TextBlock x:Name="StepLabel"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="14, 0">
                        <TextBlock Text="Page:" FontWeight="Bold" Foreground="#FFBE0966" />
                        <TextBlock x:Name="PageLabel"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="14,0">
                        <TextBlock Text="Status:" FontWeight="Bold" Foreground="#FFBE0966" />
                        <TextBlock x:Name="StatusLabel"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Background="#FFFFF4F4"
                CornerRadius="12"
                Padding="14"
                Margin="0,0,0,16"
                BorderBrush="#FFE1BEE7"
                BorderThickness="2">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel Margin="16, 0">
                    <TextBlock Text="Page Faults"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#FFBE0966"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PerfPageFaults"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#FFAD1457"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="16, 0">
                    <TextBlock Text="Fault Rate"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#FFBE0966"
                            HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PerfFaultRate"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#FFAD1457"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="16,0">
                    <TextBlock Text="AMAT"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#FFBE0966"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PerfAMAT"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#FFAD1457"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="16,0">
                    <TextBlock Text="Memory Usage"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="#FFBE0966"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PerfMemoryUsage"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#FFAD1457"
                               HorizontalAlignment="Center"/>
                </StackPanel>

            </StackPanel>

        </Border>


        <Border Grid.Row="3"
                Background="#FFFFF4F4"
                CornerRadius="16"
                Padding="16"
                BorderBrush="#FFE1BEE7"
                BorderThickness="2" Margin="0,33,0,52">

            <StackPanel>
                <TextBlock Text="Frames"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#FF9A1B4E"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <StackPanel x:Name="FramesPanel"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,18,0,0">
            <Button Content="Previous"
                    Padding="10, 4"
                    Background="#FFD174A7"
                    Click="PrevStepClick"/>
            
            <Button Content="Play"
                    Padding="10, 4"
                    Background="#FFD174A7"
                    Click="PlayClick"/>

            <Button Content="Pause"
                    Padding="10, 4"
                    Background="#FFD174A7"
                    Click="PauseClick"/>

            <Button Content="Next"
                    Padding="10, 4"
                    Background="#FFD174A7"
                    Click="NextStepClick"/>

            <Button Content="Reset"
                    Padding="10, 4"
                    Background="#FFD174A7"
                    Click="ResetClick"/>

            <Button Content="Close"
                    Padding="10, 4"
                    Background="#FFD174A7"
                    Click="CloseClick"/>
            <Button Content="Charts"
                    Padding="10,4"
                    Background="#FFD174A7"
                    Click="ChartsClick"/>

        </StackPanel>
                    

    </Grid>
</Window>
